<h1>Movies!!!</h1>

<h2>Search Movie Titles</h2>

<%= form_tag("/", method: "get") do %>
 <%= label_tag(:q, "Search for:") %>
 <%= text_field_tag(:q) %>
 <%= submit_tag("search") %>
<% end %>

<% if @movies %>
  <% @movies.each do |i| %>
    <p>
      <%= i["Title"] %>
      <br>
      <%= i["Year"] %>
      <br>
      <% if i["Poster"] != "N/A" %>
        <%= image_tag(i["Poster"], size: "140x200") %>
      <% end %>
    </p>
  <% end %>
<% end %>
